@page
@model TaskManager.Pages.CreateTaskModel
@{
    ViewData["Title"] = "Create Task";
}

<form method="post">
    <div class="form-group">
        <label for="Title">Task Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Enter task title" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Task Description</label>
        <textarea class="form-control" id="Description" asp-for="Description" rows="4" placeholder="Enter task description" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="EstimatedCompletion">Due Date</label>
        <input type="date" class="form-control" id="EstimatedCompletion" asp-for="EstimatedCompletion" required />
        <span asp-validation-for="EstimatedCompletion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Task</button>
</form>